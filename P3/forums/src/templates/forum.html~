<h4>Edit the forum</h4>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
     <form role="form" method="POST" action="@{ModifyForumR fid}">
        ^{eformw}
        <button type="submit" class="btn btn-success">Edit Forum</button>
     </form>
  </div>
</div>
$end